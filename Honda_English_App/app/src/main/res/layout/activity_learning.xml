<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5F0FF">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/purple"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:contentDescription="Quay lại"
                android:layout_centerVertical="true"
                android:layout_marginTop="12dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tvSettingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Học"
                android:textSize="26sp"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ProgressBar
        android:id="@+id/progressBarLoading"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />

    <!-- Flashcard -->
    <LinearLayout
        android:id="@+id/layoutWord"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/flashcard_background">

            <!-- Icon cái loa ở góc trên bên phải -->
            <ImageView
                android:id="@+id/btnSpeaker"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:contentDescription="Phát âm thanh"
                android:src="@drawable/amthanh" />

            <!-- Từ tiếng Anh ở giữa -->
            <TextView
                android:id="@+id/tvEnglishWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="manager"
                android:textColor="@android:color/black"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!--            <TextView-->
            <!--                android:id="@+id/tvPhonetic"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_below="@id/tvEnglishWord"-->
            <!--                android:layout_centerHorizontal="true"-->
            <!--                android:text="/ˈmæn.ɪ.dʒər/"-->
            <!--                android:textSize="18sp"-->
            <!--                android:textColor="@android:color/darker_gray"-->
            <!--                android:layout_marginTop="8dp"/>-->

            <!-- Đường kẻ -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@id/tvEnglishWord"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#DDDDDD" />

            <!-- Nghĩa tiếng Việt -->
            <TextView
                android:id="@+id/tvVietnameseMeaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEnglishWord"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="quản lý"
                android:textColor="@android:color/darker_gray"
                android:textSize="22sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutRemember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:visibility="visible">
        <TextView
            android:id="@+id/txtRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Đã nhớ!"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnRemember"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="Đã nhớ"
            android:src="@drawable/tick3" />
    </LinearLayout>

</LinearLayout>
