<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi chọn đúng -->
    <item android:state_selected="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_green_light"/> <!-- Xanh lá -->
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="@android:color/black"/>
        </shape>
    </item>

    <!-- Khi chọn sai -->
    <item android:state_selected="true" android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_red_light"/> <!-- Đỏ -->
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="@android:color/black"/>
        </shape>
    </item>

    <!-- Mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Màu nền trắng -->
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="@android:color/black"/>
        </shape>
    </item>
</selector>
